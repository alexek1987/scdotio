<div class="container">
  <div class="container-top">
    <h1><%= @product.title %> </h1>
    <% if policy(@product).edit? %>
    <%= link_to "Edit", edit_product_path(@product), class: "btn btn-outline-light show-button", id: "edit" %>
    <% end %>
    <% if policy(@product).destroy? %>
    <%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-light show-button" %>
    <% end %>
  </div>

  <div class="content">
    <div class="photo">

      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% if @product.photos.attached? %>
          <div class="carousel-item active">
            <%= cl_image_tag @product.photos.first.key, width: 350, crop: :scale %>
          </div>
          <% @product.photos[1..-1].each do |photo| %>
          <div class="carousel-item">
            <%= cl_image_tag photo.key, width: 350, crop: :scale %>
          </div>
          <% end %>
          <% else %>
          <div class="carousel-item active">
            <img class="default" src="https://www.menupleaz.com/build/images/empty-product-large.png" class="d-block w-100" alt="...">
          </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <div class="bottom-container">
        <div class="pup-info">
          <h3>Offer <i class="fas fa-money-check"></i></h3>
          <p>Product: <%= @product.title %></p>
          <p>Brand: <%= @product.brand %></p>
          <p>Compensation <small>(In USD)</small> <%= @product.age %> $</p>
          <p>Freebees: <%= @product.description%></p>

          <small><p>Terms</p></small>
        </div>
        <div class="links">
          <div class="make-request">
            <% if policy(@request).create? %>
            <div class="heart-emoji">
              <%= link_to "❤️", new_product_request_path(@product), class: "heart" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
